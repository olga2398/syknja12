$(document).ready(function(){$("a[href^='#']").click(function(){var d=$(this).attr("href");var c=$(this).parent().find("h3").text();$("#order_form select[name='s3'] option[value='"+c+"']").prop("selected",true);$("html, body").animate({scrollTop:$(d).offset().top+"px"});return false});function b(){var g=new Date(),c=new Date();c.setHours(23);c.setMinutes(59);c.setSeconds(59);if(g.getHours()===23&&g.getMinutes()===59&&g.getSeconds===59){c.setDate(c.getDate()+1)}var f=Math.floor((c.getTime()-g.getTime())/1000);var e=Math.floor(f/3600);f-=e*3600;var d=Math.floor(f/60);f-=d*60;$(".timer .hours").html(a(e));$(".timer .minutes").html(a(d));$(".timer .seconds").html(a(f));setTimeout(b,200)}function a(c){c=("00"+c).substr(-2);return"<span>"+c[0]+"</span><span>"+c[1]+"</span>"}b()});$(document).ready(function(){$(".slider-dress").slick({slidesToShow:1,slidesToScroll:1,autoplay:false,speed:500})});$(document).ready(function(){$("form").submit(function(a){var b=$(this).find("input[name='phone']").val();if(b.indexOf("_")==-1&&b!=null&&typeof b!=="undefined"&&b!=""){}else{alert("Введите Ваш номер телефона!");return false}});Inputmask.extendDefinitions({"~":{validator:"[1245679]"}});$("input[name='name']").on("keypress",function(a){return(/[A-Za-zА-Яа-яЁё\s]/.test(String.fromCharCode(a.charCode)))});$("input[name='phone']").inputmask({mask:"+38 (0~9) 999-99-99",greedy:false,clearIncomplete:true,placeholder:"_",rightAlign:false,showMaskOnHover:false,showMaskOnFocus:true});$("input[name='phone']").on("keydown",function(a){if(a.keyCode==37||a.keyCode==38||a.keyCode==39||a.keyCode==40){a.preventDefault();return false}})});